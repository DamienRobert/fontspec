
\begin{filecontents*}{FiraSans-Regular.fontspec}
\defaultfontfeatures[FiraSans-Regular]{
  Extension = .otf ,
  UprightFont    = FiraSans-Regular    ,
  BoldFont       = FiraSans-Bold       ,
  ItalicFont     = FiraSans-Italic     ,
  BoldItalicFont = FiraSans-BoldItalic ,
  Colour = AABBCC ,
}
\end{filecontents*}

\begin{filecontents*}{umtypewriter-regular.fontspec}
\defaultfontfeatures[umtypewriter-regular]{
  Extension = .otf ,
  UprightFont    = UMTypewriter-Regular    ,
  BoldFont       = UMTypewriter-Bold       ,
  ItalicFont     = UMTypewriter-Italic     ,
  BoldItalicFont = UMTypewriter-BoldItalic ,
  Colour = AABBCC ,
}
\end{filecontents*}

